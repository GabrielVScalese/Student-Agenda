<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:background="@drawable/ic_baseline_account_box_24"
        android:layout_width="230dp"
        android:layout_height="230dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="GERENCIADOR DE ALUNOS"
        android:textAlignment="center"
        android:layout_marginBottom="40dp"
        android:textStyle="bold"
        android:textColor="@color/corDoTexto"
        />

    <Button
        android:id="@+id/btnConsultar"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Consultar e Excluir Alunos"
        android:background="@drawable/bordas_button"
        android:backgroundTint="#C4C4C4"
        android:layout_gravity="center"
        android:layout_marginBottom="30dp"
        />

    <Button
        android:id="@+id/btnInserirAluno"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Inserir aluno"
        android:background="@drawable/bordas_button"
        android:backgroundTint="#C4C4C4"
        android:layout_gravity="center"
        android:layout_marginBottom="30dp"
        />

    <Button
        android:id="@+id/btnAlterar"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Alterar informações aluno"
        android:background="@drawable/bordas_button"
        android:backgroundTint="#C4C4C4"
        android:layout_gravity="center"
        android:layout_marginBottom="30dp"
        />

</LinearLayout>